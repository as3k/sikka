{{!--
Re-usable card for linking to posts
--}}

<article class="gh-card {{post_class}} mb-24 md:mb-32">
  <a class="gh-card-link flex flex-col items-center text-center" href="{{url}}">
    <div class="card-title mb-8">
      <h2 class="gh-card-title font-playfair font-extrabold text-3xl md:containertext-5xl mb-4 text-gray-900 dark:text-offwhite">{{title}}
      </h2>
      <span class="gh-card-meta font-nunito uppercase text-semibold tracking-wide text-xs text-gray-400">
        {{ primary_tag.name }} |
        <time datetime="{{date format=" YYYY-MM-DD"}}">{{date format="MMMM D, YYYY"}}</time>
        <span> | </span>
        {{reading_time}}
      </span>
    </div>

    {{#if feature_image}}
    <img class="gh-card-image w-full mb-8 shadow-double-drop rounded-lg" srcset="{{img_url feature_image size=" s"}} 300w,
      {{img_url feature_image size="m" }} 600w, {{img_url feature_image size="l" }} 1000w, {{img_url feature_image
      size="xl" }} 2000w" sizes="(max-width: 1000px) 400px, 700px" src="{{img_url feature_image size=" m"}}"
      alt="{{title}}" />
    {{/if}}

    <div class="gh-card-content grid grid-cols-1 md:grid-cols-6">
      <div class="grid-content-container md:col-span-4 md:col-start-2">
        <p class="md:text-lg mb-8 text-left">{{excerpt}}</p>
        <button class="border border-nord9 dark:border-gray-400 px-2 py-1 md:px-4 md:py-2 font-nunito font-bold uppercase">Continue
          Reading</button>
      </div>
    </div>
  </a>
</article>